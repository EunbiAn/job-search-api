<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="egovframework.mapper.job.MemberMapper">

	<!-- 회원가입 처리 -->
	<insert id="registerMember"
		parameterType="egovframework.job.dto.MemberDTO"
		useGeneratedKeys="true" keyProperty="m_num">
		INSERT INTO member (id, password,
		birth, name, gender, email, phone, profil)
		VALUES (#{id}, #{password},
		#{birth}, #{name}, #{gender}, #{email},
		#{phone}, #{profil})
	</insert>

	<!-- 아이디 검색 -->
	<select id="findById"
		resultType="egovframework.job.dto.MemberDTO">
		SELECT *
		FROM member
		WHERE id = #{id}
	</select>
	<!-- 시퀀스넘버로 멤버검색 -->
	<select id="findByLongId" resultType="egovframework.job.dto.MemberDTO">
		SELECT *
		FROM member
		WHERE m_num = #{id}
	</select>

	<!-- 시퀀스 번호로 회원 조회 -->
	<select id="findByMNum" parameterType="java.lang.Long"
		resultType="egovframework.job.dto.MemberDTO">
		SELECT *
		FROM member
		WHERE m_num = #{m_num}
	</select>

	<!-- 아이디 상세정보 수정 -->
	<update id="updateMember"
		parameterType="egovframework.job.dto.MemberDTO">
		UPDATE member
		SET email = #{email}, phone = #{phone},
		profil = #{profil}
		WHERE id = #{id}
	</update>

	<!-- 비밀번호 찾기 -->
	<select id="findPassword" resultType="java.lang.String">
		SELECT password
		FROM member
		WHERE id = #{id}
		AND name = #{name}
		AND phone = #{phone}
	</select>

	<!-- 비밀번호 변경 처리 -->
	<update id="updatePassword" parameterType="java.lang.String">
		UPDATE member
		SET
		password = #{password}
		WHERE id = #{id}
	</update>

	<!-- 아이디 탈퇴 -->
	<delete id="deleteMember">
		DELETE
		FROM member
		WHERE id = #{id}
	</delete>

	<!-- 대표이력서 설정 -->
	<update id="rdefaultMember"
		parameterType="egovframework.job.dto.MemberDTO">
		UPDATE member
		SET R_DEFAULT = #{r_default}
		WHERE m_num =
		#{m_num}
	</update>
</mapper>